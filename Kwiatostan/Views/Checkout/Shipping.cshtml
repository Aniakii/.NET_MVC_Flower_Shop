@model Kwiatostan.Models.Address

@{
    ViewData["Title"] = "Wybierz sposób dostawy";
}


<h2 class="mb-4">Wybierz sposób dostawy</h2>

<div class="row p-5">
    <div style="background-color: #e0e0e0; border:3px solid black" class="p-3 col-md-4">
        <h3>Podaj adres</h3>
        <form asp-action="Shipping">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Ulica" class="control-label"></label>
                <input asp-for="Ulica" class="form-control" />
                <span asp-validation-for="Ulica" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumerBudynku" class="control-label"></label>
                <input asp-for="NumerBudynku" class="form-control" />
                <span asp-validation-for="NumerBudynku" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumerMieszkania" class="control-label"></label>
                <input asp-for="NumerMieszkania" class="form-control" />
                <span asp-validation-for="NumerMieszkania" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Miasto" class="control-label"></label>
                <input asp-for="Miasto" class="form-control" />
                <span asp-validation-for="Miasto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KodPocztowy" class="control-label"></label>
                <input asp-for="KodPocztowy" class="form-control" />
                <span asp-validation-for="KodPocztowy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <input asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

