<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kwiatostan</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Kwiatostan.styles.css" asp-append-version="true" />
</head>
<body>

    <header>
        <nav style="background-color:#e0e0e0;" class="navbar navbar-expand-md navbar-toggleable-md navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <div style="visibility:hidden; display:none "class="navbar-collapse collapse d-md-inline-flex flex-grow-0 justify-content-between">
                    <ul class="navbar-nav flex-grow-1 gap-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark btn btn-outline-secondary" asp-area="" asp-controller="Home" asp-action="Index">Bukiety</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark btn btn-outline-secondary" asp-area="" asp-controller="Home" asp-action="Index">Koszyk</a>
                        </li>
                        <partial name="_LoginPartial" />
                    </ul>
                </div>

                <a class="navbar-brand fs-2" asp-area="" asp-controller="Shop" asp-action="Index">Kwiatostan</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>


                <div class="navbar-collapse collapse d-md-inline-flex flex-grow-0 justify-content-between">
                    <ul class="navbar-nav flex-grow-1 gap-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark btn btn-outline-secondary" asp-area="" asp-controller="Home" asp-action="Index">Bukiety</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark btn btn-outline-secondary" asp-area="" asp-controller="ShoppingCart" asp-action="Index">Koszyk</a>
                        </li>
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <partial name="_AlertPartial" />
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Kwiatostan - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
